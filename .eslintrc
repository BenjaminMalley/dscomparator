{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "classes": true
  },
  "rules": {
    "indent": [2, 2],
    "semi": 0,
    "quotes": [1, "double"],
    "comma-dangle": 0,
    "no-mixed-requires": 0,
    "no-extra-boolean-cast": 0,
    "no-unused-vars": 0,
    "no-debugger": 0,
    "no-loop-func": 0,
    "no-underscore-dangle": 0
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals":  {
    "__TEST__": true
  }
}
